rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // USERS
    match /users/{uid} {
      // Read any user profile when authenticated (for displaying names/photos)
      allow read: if request.auth != null;
      // Create/update/delete only your own user document
      allow create: if request.auth != null && request.auth.uid == uid;
      allow update, delete: if request.auth != null && request.auth.uid == uid;
    }

    // POSTS
    match /posts/{postId} {
      // Allow reading posts when authenticated
      allow read: if request.auth != null;

      // Allow creating a post if the post belongs to the caller
      // Keep validation light to avoid conflicts with serverTimestamp
      allow create: if request.auth != null
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.content is string
        && request.resource.data.content.size() > 0
        && request.resource.data.content.size() <= 1000;

      // Only owner can update/delete their post
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // DEFAULT DENY for everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
